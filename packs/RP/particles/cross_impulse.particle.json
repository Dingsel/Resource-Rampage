{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "dest:impulse_cross",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particle/cross"
			}
		},
		"curves": {
			"variable.size": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 0]
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "variable.radius = 5;variable.current;variable.count = 0;variable.color;"
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": "variable.current.direction_x"
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 1
			},
			"minecraft:emitter_shape_point": {
				"direction": ["-1 + 2*variable.particle_random_1", 0, "-1 + 2*variable.particle_random_2"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "variable.current.direction_y"
			},
			"minecraft:particle_initial_speed": "variable.current.speed",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 1
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["variable.current.direction_z*v.size", "variable.current.direction_z*v.size"],
				"facing_camera_mode": "lookat_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 16,
					"uv": [0, 0],
					"uv_size": [16, 16]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": ["variable.color.r", "variable.color.g", "variable.color.b", "variable.color.a"]
			}
		}
	}
}