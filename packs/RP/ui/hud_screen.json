                      "alpha": 0,
                      "font_scale_factor": 0.5
                    }
                  }
                ]
            }
              },
              {
                "filledbar": {
                    "type": "image",
                    "size": [ "100%c+12px", "100%c" ],
                    "offset": [0,15],
                    "texture": "textures/ui/background",
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "alpha": 0.6,
                    "controls": [
                        {
                            "text": {
                                "type": "label",
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "layer": 31,
                                "offset": [0, -1.5],
                                "text": "($title_text - (%.155s * $title_text))",
                                "alpha": 1,
                                "font_type": "MinecraftTen",
                                "font_scale_factor": 1.5
                              }
                          }
                    ]
                }
                  }
        ]
      },

    "custom_bar_factory": {
        "type": "panel",
        "factory": {
          "name": "hud_title_text_factory",
          "control_ids": {
            "hud_title_text": "custom_bar@hud.custom_bar"
          }
        }
      },

      "hud_content": {
        "type": "panel",
        "$hud_size": [ "100%", "100%" ],
        "$hud_player_rend_desktop_offset|default": [ 15, 15 ],
        "variables": [
          { "requires": "($is_holographic and not $is_living_room_mode)", "$hud_player_rend_desktop_offset": [ 100, 50 ] },
          { "requires": "($compress_hud_width)", "$hud_size": [ "90%", "100%" ] }
        ],
        "size": "$hud_size",
        "controls": [
          { "root_panel@hud.root_panel": {} },
          { "custom_bar_factory@hud.custom_bar_factory": {} },
          { "camera_renderer@camera_renderer": {} }
        ]
      }
}